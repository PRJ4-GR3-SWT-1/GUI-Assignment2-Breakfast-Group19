@model IEnumerable<GUI_Assignment2_Breakfast_Group19.Models.BreakfastReservations>

@{
    ViewData["Title"] = "Calendar with breakfast reservations";
}

<h1>Calendar with breakfast reservations</h1>

<p>
    <button class="btn btn-primary"><a asp-action="Create" class="text-light">Create New Date</a></button>

    <button class="btn btn-primary"><a asp-controller="Room" asp-action="CreateReservation" class="text-light">Create Breakfast Reservation</a></button>
</p>
<p>Click on a date to see reservation details for that day</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Attendees
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

    <tr>
        <td><a asp-action="Details" asp-route-id="@item.BreakfastReservationsId">
            @item.Date.Date.ToString("D")
        </a></td>
        <td>
           @item.GetNumberOfAdultsAndChildren().Sum() 
        </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BreakfastReservationsId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.BreakfastReservationsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
